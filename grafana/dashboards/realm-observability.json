{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "üéØ Service Status",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "up{job=\"arcanum\"}",
          "legendFormat": "Arcanum Service",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              },
              "type": "value"
            }
          ],
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "unit": "none"
        }
      }
    },
    {
      "title": "üìä Request Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "rate(arcanum_requests_total[5m])",
          "legendFormat": "{{provider}} - {{status}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Requests/sec",
          "show": true
        },
        {
          "show": true
        }
      ],
      "xAxis": {
        "show": true
      }
    },
    {
      "title": "üö® Active Alerts",
      "type": "table",
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "ALERTS{alertstate=\"firing\"}",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "alertname": "Alert",
              "severity": "Severity",
              "summary": "Summary"
            }
          }
        }
      ]
    },
    {
      "title": "üìù Recent Logs",
      "type": "logs",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{job=\"docker\"} |= \"arcanum\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "title": "üîß Self-Healing Actions",
      "type": "table",
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 24
      },
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{job=\"realm\"} |= \"REMEDIATION\"",
          "refId": "A"
        }
      ]
    },
    {
      "title": "üíæ Resource Usage",
      "type": "graph",
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "container_memory_usage_bytes{name=~\".*arcanum.*\"} / 1024 / 1024",
          "legendFormat": "Memory (MB)",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        },
        {
          "show": true
        }
      ]
    }
  ],
  "refresh": "5s",
